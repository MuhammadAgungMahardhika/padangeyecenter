---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
  slug: string;
  category: string;
  description: string;
  items: { name: string }[];
  icon: string;
  color: string;
}

const { category, description, items, color, slug } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const dynamicLink = getRelativeLocaleUrl(lang, `/layanan/${slug}`);

const colorMap = {
  orange: {
    primary: "#ea580c",
    rgb: "234, 88, 12",
  },
  green: {
    primary: "#16a34a",
    rgb: "22, 163, 74",
  },
  gradient: {
    primary: "#548e9b",
    rgb: "84, 142, 155",
  },
};

const theme = colorMap[color as keyof typeof colorMap] || colorMap.orange;
---

<div class="inline-block w-[90vw] md:w-[420px] flex-shrink-0 snap-center p-4">
  <div class="service-card group relative h-[540px]">
    <!-- Glow Effect -->
    <div
      class="glow-effect absolute -inset-1 rounded-[2rem] opacity-0 blur-xl transition-all duration-700"
      style={`background: linear-gradient(135deg, rgba(${theme.rgb}, 0.2), rgba(${theme.rgb}, 0.1));`}>
    </div>

    <!-- Main Card -->
    <div
      class="card-main relative h-full rounded-[2rem] backdrop-blur-xl border shadow-2xl transition-all duration-500 overflow-hidden">
      <!-- Animated Background Pattern -->
      <div class="pattern-bg absolute inset-0">
        <div
          class="absolute inset-0"
          style="background-image: radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0); background-size: 32px 32px;">
        </div>
      </div>

      <!-- Color Accent Bar -->
      <div
        class="accent-bar absolute top-0 left-0 right-0 h-1 opacity-60 transition-opacity duration-500"
        style={`background: linear-gradient(90deg, ${theme.primary}, transparent);`}>
      </div>

      <!-- Content Container -->
      <div class="relative h-full flex flex-col p-8">
        <!-- Header Section -->
        <div class="space-y-5 mb-8">
          <!-- Badge -->
          <div class="flex items-center gap-3">
            <div
              class="badge-line h-[2px] w-12 rounded-full transition-all duration-500"
              style={`background-color: ${theme.primary};`}>
            </div>
            <span
              class="badge-text text-[9px] font-bold uppercase tracking-[0.3em]">
              {t("services.badge")}
            </span>
          </div>

          <!-- Title -->
          <h3 class="space-y-1">
            <div
              class="title-primary text-5xl font-black tracking-tighter uppercase transition-all duration-300">
              {category.split(" ")[0]}
            </div>
            <div
              class="text-5xl font-black tracking-tighter uppercase transition-all duration-300"
              style={`color: ${theme.primary};`}>
              {category.split(" ").slice(1).join(" ")}
            </div>
          </h3>

          <!-- Description -->
          <p
            class="description-text text-sm leading-relaxed line-clamp-2 font-medium">
            {description}
          </p>
        </div>

        <!-- Services List (Expandable) -->
        <div class="mb-8 details-container">
          <details class="group/details cursor-pointer">
            <summary
              class="details-summary flex items-center justify-between p-4 rounded-2xl border transition-all duration-300 list-none">
              <span
                class="summary-text text-[10px] font-bold uppercase tracking-[0.2em]">
                Service Details
              </span>
              <svg
                class="summary-icon w-4 h-4 transition-transform duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path stroke-width="2.5" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>

            <div class="mt-3 space-y-2 px-2 animate-fadeIn">
              {
                items.map((item, index) => (
                  <div
                    class="item-row flex items-center gap-3 p-3 rounded-xl transition-all duration-300 group/item"
                    style={`animation-delay: ${index * 50}ms;`}>
                    <div
                      class="item-dot w-1.5 h-1.5 rounded-full transition-all duration-300"
                      style={`background-color: ${theme.primary};`}
                    />
                    <span class="item-text text-xs font-semibold uppercase tracking-wide transition-transform duration-300">
                      {item.name}
                    </span>
                  </div>
                ))
              }
            </div>
          </details>
        </div>

        <!-- CTA Button -->
        <div class="mt-auto cta-container">
          <a
            href={dynamicLink}
            class="cta-button group/btn relative flex items-center justify-between w-full p-1.5 pl-7 rounded-full border transition-all duration-500 overflow-hidden shadow-lg">
            <!-- Button Glow -->
            <div
              class="btn-glow absolute inset-0 opacity-0 transition-opacity duration-500 blur-xl"
              style={`background: linear-gradient(90deg, transparent, rgba(${theme.rgb}, 0.25), transparent);`}>
            </div>

            <span
              class="btn-text relative text-[10px] font-bold uppercase tracking-[0.25em] z-10">
              {t("services.cta")}
            </span>

            <div
              class="btn-icon relative w-12 h-12 rounded-full flex items-center justify-center transition-all duration-500 shadow-lg z-10"
              style={`background-color: ${theme.primary};`}>
              <svg
                class="w-5 h-5 text-white transition-transform duration-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24">
                <path
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </div>
          </a>
        </div>
      </div>

      <!-- Decorative Corner Element -->
      <div
        class="corner-decoration absolute bottom-0 right-0 w-32 h-32 pointer-events-none"
        style={`background: radial-gradient(circle at bottom right, ${theme.primary}, transparent 70%); opacity: 0.03;`}>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out forwards;
  }

  .service-card:hover {
    transform: translateY(-8px);
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .service-card:hover .glow-effect {
    opacity: 1;
  }

  /* Card Main - menggunakan background-body */
  .card-main {
    background-color: var(--background-body);
    border-color: rgba(0, 0, 0, 0.1);
    opacity: 0.95;
  }

  :root.theme-dark .card-main {
    border-color: rgba(255, 255, 255, 0.1);
  }

  /* Pattern Background - menggunakan text-main */
  .pattern-bg {
    opacity: 0.02;
    color: var(--text-main);
  }

  :root.theme-dark .pattern-bg {
    opacity: 0.05;
  }

  /* Badge - menggunakan text-muted */
  .badge-text {
    color: var(--text-muted);
  }

  .service-card:hover .badge-line {
    width: 4rem;
  }

  .service-card:hover .accent-bar {
    opacity: 1;
  }

  /* Title - menggunakan text-main */
  .title-primary {
    color: var(--text-main);
  }

  .service-card:hover .title-primary {
    transform: translateX(0.25rem);
  }

  .service-card:hover h3 > div:last-child {
    transform: translateX(0.5rem);
  }

  /* Description - menggunakan text-muted */
  .description-text {
    color: var(--text-muted);
  }

  /* Details Summary */
  .details-summary {
    background-color: rgba(0, 0, 0, 0.03);
    border-color: rgba(0, 0, 0, 0.05);
  }

  :root.theme-dark .details-summary {
    background-color: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .details-summary:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  :root.theme-dark .details-summary:hover {
    background-color: rgba(255, 255, 255, 0.08);
  }

  .summary-text {
    color: var(--text-muted);
  }

  .summary-icon {
    color: var(--text-muted);
  }

  details[open] .summary-icon {
    transform: rotate(180deg);
  }

  /* Hide CTA button when details is open */
  .details-container:has(details[open]) ~ .cta-container {
    opacity: 0;
    pointer-events: none;
    transform: translateY(10px);
  }

  .cta-container {
    opacity: 1;
    transition: all 0.3s ease-out;
  }

  /* Item Row */
  .item-row:hover {
    background-color: rgba(0, 0, 0, 0.03);
  }

  :root.theme-dark .item-row:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .item-text {
    color: var(--text-muted);
  }

  .item-row:hover .item-text {
    color: var(--text-main);
  }

  .item-row:hover .item-dot {
    transform: scale(1.5);
  }

  .item-row:hover .item-text {
    transform: translateX(0.25rem);
  }

  /* CTA Button */
  .cta-button {
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.05),
      rgba(0, 0, 0, 0.08)
    );
    border-color: rgba(0, 0, 0, 0.1);
  }

  :root.theme-dark .cta-button {
    background: linear-gradient(
      to right,
      rgba(255, 255, 255, 0.08),
      rgba(255, 255, 255, 0.05)
    );
    border-color: rgba(255, 255, 255, 0.1);
  }

  .cta-button:hover {
    background: var(--background-body);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .btn-text {
    color: var(--text-main);
  }

  .cta-button:hover .btn-glow {
    opacity: 1;
  }

  .cta-button:hover .btn-icon {
    transform: scale(1.1) rotate(-45deg);
  }

  .cta-button:hover .btn-icon svg {
    transform: translateX(2px);
  }

  /* Corner decoration adapts to theme */
  :root.theme-dark .corner-decoration {
    opacity: 0.08 !important;
  }
</style>
