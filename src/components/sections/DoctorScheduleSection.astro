---
// src/components/sections/DoctorScheduleSection.astro
import { doctors } from '../../data/doctors';

// Get unique specializations
const specializations = ['Semua', ...new Set(doctors.map(d => d.specialization))];
---
<section class="py-10 overflow-hidden" id="doctor-schedule">
  <div class="w-full max-w-7xl mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-8">
      <div class="inline-block mb-4">
        <span class="px-4 py-2 bg-gradient-to-r from-orange-100 to-green-100 rounded-full text-sm font-semibold text-gray-700">
          Tim Profesional
        </span>
      </div>
      <h2 class="text-4xl font-bold mb-3">
        <span class="bg-gradient-to-r from-orange-600 to-green-600 bg-clip-text text-transparent">
          Jadwal Dokter Spesialis
        </span>
      </h2>
      <p class="text-gray-600 text-lg">
        <span id="total-doctors">{doctors.length}</span> dokter spesialis berpengalaman
      </p>
    </div>

    <!-- Filter Specialization -->
    <div class="flex flex-wrap justify-center gap-2 mb-8">
      {specializations.map((spec, index) => (
        <button
          class={`filter-btn px-4 py-2 rounded-full text-sm font-semibold transition-all duration-300 ${
            index === 0 
              ? 'bg-gradient-to-r from-orange-500 to-green-500 text-white shadow-lg' 
              : 'bg-white text-gray-700 border-2 border-gray-200 hover:border-orange-300'
          }`}
          data-filter={spec === 'Semua' ? 'all' : spec}
        >
          {spec}
        </button>
      ))}
    </div>

    <!-- Carousel Container -->
    <div class="relative w-full">
      <!-- Cards Wrapper -->
      <div 
        id="carousel-wrapper" 
        class="relative w-full mx-auto flex items-center justify-center"
        style="height: 480px; perspective: 1200px;">
        {doctors.map((doctor, index) => (
          <div 
            class="doctor-carousel-card absolute "
            data-index={index}
            data-specialization={doctor.specialization}
            style="
              width: 280px;
              left: 50%;
              top: 50%;
              margin-left: -140px;
              margin-top: -240px;
              transform-style: preserve-3d;
            "
          >
            <div class="relative group ">
              <div class="relative bg-white dark:bg-gray-900 rounded-2xl overflow-hidden shadow-2xl border-2 border-gray-100 dark:border-gray-700">
            
                <!-- Shine Effect -->
                <div class="absolute inset-0 bg-gradient-to-br from-white/30 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none z-10"></div>
                
                <!-- Doctor Image -->
                <div class="relative h-56 overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-900">
                  <img
                    src={doctor.image}
                    alt={doctor.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                  
                  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
                  
                  <!-- Badge -->
                  <div class="absolute top-2 right-2">
                    <div class="px-2 py-1 bg-white dark:bg-gray-800 rounded-full border border-orange-200 dark:border-orange-800 shadow-lg">
                      <span class="text-xs font-bold text-orange-600 dark:text-orange-400">
                        {doctor.specialization}
                      </span>
                    </div>
                  </div>

                  <!-- Name -->
                  <div class="absolute bottom-0 left-3 right-0 z-10">
                    <h3 class="text-base font-bold text-white/50 truncate
                                [text-shadow:
                                -1px_-1px_0_rgba(0,0,0,0.8),
                                    1px_-1px_0_rgba(0,0,0,0.8),
                                -1px_ 1px_0_rgba(0,0,0,0.8),
                                    1px_ 1px_0_rgba(0,0,0,0.8)
                                ]">
                      {doctor.name}
                    </h3>

                    <p class="text-xs text-white/50 truncate
                                [text-shadow:
                                -1px_-1px_0_rgba(0,0,0,0.8),
                                1px_-1px_0_rgba(0,0,0,0.8),
                                -1px_ 1px_0_rgba(0,0,0,0.8),
                                1px_ 1px_0_rgba(0,0,0,0.8)
                                ]">
                      {doctor.title}
                    </p>
                  </div>
                </div>

                {doctor.education?.length > 0 && (
                  <div class="p-3 bg-white dark:bg-gray-900">
                    {/* Education */}
                    <div class="mb-3 space-y-1.5">
                      <div class="flex items-center gap-1.5">
                        <div class="p-1 bg-orange-100 dark:bg-orange-900/30 rounded">
                          <svg
                            class="w-3 h-3 text-orange-600 dark:text-orange-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 14l9-5-9-5-9 5 9 5z"
                            />
                          </svg>
                        </div>
                        <span class="text-xs font-semibold text-gray-700 dark:text-gray-300">
                          Pendidikan
                        </span>
                      </div>

                      <div class="flex items-start gap-1.5 pl-5">
                        <svg
                          class="w-2.5 h-2.5 mt-1 text-green-600 dark:text-green-400 flex-shrink-0"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="3"
                            d="M5 13l4 4L19 7"
                          />
                        </svg>

                        <span class="text-xs text-gray-700 dark:text-gray-300 leading-tight line-clamp-2">
                          {doctor.education[0]}
                        </span>
                      </div>
                    </div>
                  </div>
                )}
                  <!-- Divider -->
                  <div class="border-t border-gray-100 dark:border-gray-800 my-2"></div>

                  <!-- Schedule -->
                  <div class="space-y-1.5 mb-3 px-4">
                    <div class="flex items-center gap-1.5">
                      <div class="p-1 bg-green-100 dark:bg-green-900/30 rounded">
                        <svg class="w-3 h-3 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                      </div>
                      <span class="text-xs font-semibold text-gray-700 dark:text-gray-300">Jadwal</span>
                    </div>
                    
                    {doctor.schedule.slice(0, 7).map((sched) => (
                      <div class="flex items-center justify-between bg-gray-50 dark:bg-gray-800/80 rounded-lg px-2 py-1.5 border border-gray-100 dark:border-gray-700">
                        <span class="text-xs font-semibold text-gray-800 dark:text-gray-200">
                          {sched.day}
                        </span>
                        <span class="text-xs text-gray-600 dark:text-gray-400 font-mono font-bold">
                          {sched.time}
                        </span>
                      </div>
                    ))}
                  </div>

                  <!-- CTA Button -->
                  <a href={`/dokter/${doctor.id}`}
                    class="block w-full text-center px-3 py-2 bg-gradient-to-r from-orange-500 to-green-500 hover:from-orange-600 hover:to-green-600 text-white text-xs font-bold rounded-lg shadow-lg transition-all duration-300">
                    Lihat Detail
                  </a>
              </div>

            </div>
          </div>
        ))}

      </div>

      <!-- Navigation Controls -->
      <div class="absolute inset-0 flex items-center justify-between px-2 pointer-events-none z-20" style="top: 50%; transform: translateY(-50%);">
        <button 
          id="prev-carousel"
          class="pointer-events-auto p-2 bg-white dark:bg-gray-800 rounded-full shadow-xl border-2 border-gray-200 dark:border-gray-700 hover:border-orange-500 transition-all"
          aria-label="Previous"
        >
          <svg class="w-5 h-5 text-gray-700 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>

        <button 
          id="next-carousel"
          class="pointer-events-auto p-2 bg-white dark:bg-gray-800 rounded-full shadow-xl border-2 border-gray-200 dark:border-gray-700 hover:border-green-500 transition-all"
          aria-label="Next"
        >
          <svg class="w-5 h-5 text-gray-700 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>

    </div>

    <!-- Pagination Dots with Numbers -->
    <div class="flex items-center justify-center gap-3  px-4">
      <button id="dots-prev" class="p-1 hover:bg-gray-100 rounded transition-colors" aria-label="Previous page">
        <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </button>

      <div id="dots-container" class="flex justify-center gap-2">
        <!-- Dots will be generated by JavaScript -->
      </div>

      <button id="dots-next" class="p-1 hover:bg-gray-100 rounded transition-colors" aria-label="Next page">
        <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>

      <span id="page-indicator" class="text-xs text-gray-600 ml-2 font-mono">1 / 1</span>
    </div>

    <!-- Bottom Info -->
    <div class="mt-8 text-center px-4">
      <div class="inline-flex flex-col sm:flex-row items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-orange-200 dark:border-orange-800">
        <svg class="w-4 h-4 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="text-xs text-gray-700 dark:text-gray-300 text-center">
          Hubungi <a href="tel:+62751123456" class="text-orange-600 dark:text-orange-400 font-bold">(0751) 123-456</a> untuk konfirmasi jadwal
        </span>
      </div>
    </div>

  </div>
</section>

<style>
  .doctor-carousel-card {
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Mobile & Tablet: Simple fade in/out */
  @media (max-width: 1024px) {
    .doctor-carousel-card[data-position="0"] {
      opacity: 1;
      z-index: 10;
      transform: translateZ(0) scale(1);
    }

    .doctor-carousel-card:not([data-position="0"]) {
      opacity: 0;
      z-index: 1;
      pointer-events: none;
      transform: translateZ(-100px) scale(0.9);
    }
  }

  /* Desktop: 3D Carousel Effect */
  @media (min-width: 1025px) {
    .doctor-carousel-card {
      width: 320px !important;
      margin-left: -160px !important;
    }

    .doctor-carousel-card[data-position="0"] {
      transform: translateX(0) translateZ(0) rotateY(0deg) scale(1);
      opacity: 1;
      z-index: 10;
    }

    .doctor-carousel-card[data-position="1"] {
      transform: translateX(380px) translateZ(-200px) rotateY(-30deg) scale(0.85);
      opacity: 0.5;
      z-index: 5;
    }

    .doctor-carousel-card[data-position="-1"] {
      transform: translateX(-380px) translateZ(-200px) rotateY(30deg) scale(0.85);
      opacity: 0.5;
      z-index: 5;
    }

    .doctor-carousel-card[data-position="2"] {
      transform: translateX(600px) translateZ(-350px) rotateY(-45deg) scale(0.7);
      opacity: 0.25;
      z-index: 1;
    }

    .doctor-carousel-card[data-position="-2"] {
      transform: translateX(-600px) translateZ(-350px) rotateY(45deg) scale(0.7);
      opacity: 0.25;
      z-index: 1;
    }

    .doctor-carousel-card:not([data-position="0"]):not([data-position="1"]):not([data-position="-1"]):not([data-position="2"]):not([data-position="-2"]) {
      opacity: 0;
      pointer-events: none;
      transform: translateZ(-500px) scale(0.5);
    }
  }

  .carousel-dot {
    transition: all 0.3s;
  }

  .carousel-dot.active {
    width: 1.5rem;
    background: linear-gradient(to right, rgb(249 115 22), rgb(34 197 94));
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .filter-btn.active {
    background: linear-gradient(to right, rgb(249 115 22), rgb(34 197 94));
    color: white;
    border-color: transparent;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
  }
</style>

<script is:inline>
  function initDoctorSchedule() {
    const allCards = Array.from(document.querySelectorAll('.doctor-carousel-card'));
    if (allCards.length === 0) return;

    let filteredCards = [...allCards];
    let currentIndex = 0;
    let currentPage = 0;
    const DOTS_PER_PAGE = 10;

    const filterBtns = document.querySelectorAll('.filter-btn');
    const dotsContainer = document.getElementById('dots-container');
    const pageIndicator = document.getElementById('page-indicator');
    const dotsPrev = document.getElementById('dots-prev');
    const dotsNext = document.getElementById('dots-next');
    const prevBtn = document.getElementById('prev-carousel');
    const nextBtn = document.getElementById('next-carousel');
    const totalDoctorsEl = document.getElementById('total-doctors');
    const carouselWrapper = document.getElementById('carousel-wrapper');

    function filterCards(specialization) {
      filteredCards =
        specialization === 'all'
          ? [...allCards]
          : allCards.filter(card => card.dataset.specialization === specialization);

      currentIndex = 0;
      currentPage = 0;

      if (totalDoctorsEl) {
        totalDoctorsEl.textContent = filteredCards.length;
      }

      updateCarousel();
      renderDots();
    }

    function renderDots() {
      if (!dotsContainer) return;

      const totalPages = Math.ceil(filteredCards.length / DOTS_PER_PAGE);
      const startIdx = currentPage * DOTS_PER_PAGE;
      const endIdx = Math.min(startIdx + DOTS_PER_PAGE, filteredCards.length);

      dotsContainer.innerHTML = '';

      for (let i = startIdx; i < endIdx; i++) {
        const dot = document.createElement('button');
        dot.className =
          'carousel-dot w-2 h-2 rounded-full transition-all duration-300 bg-gray-300 dark:bg-gray-600';
        dot.dataset.index = i;

        if (i === currentIndex) {
          dot.classList.add('active');
        }

        dot.addEventListener('click', () => {
          currentIndex = i;
          updateCarousel();
          renderDots();
        });

        dotsContainer.appendChild(dot);
      }

      if (pageIndicator) {
        pageIndicator.textContent = `${currentPage + 1} / ${totalPages}`;
      }

      if (dotsPrev) dotsPrev.disabled = currentPage === 0;
      if (dotsNext) dotsNext.disabled = currentPage >= totalPages - 1;
    }

    function updateCarousel() {
      allCards.forEach(card => {
        card.style.display = 'none';
        card.removeAttribute('data-position');
      });

      filteredCards.forEach((card, index) => {
        card.style.display = 'block';

        let position = index - currentIndex;
        const total = filteredCards.length;

        if (position > total / 2) position -= total;
        if (position < -total / 2) position += total;

        card.setAttribute('data-position', position);
      });
    }

    function nextCard() {
      if (!filteredCards.length) return;
      currentIndex = (currentIndex + 1) % filteredCards.length;
      currentPage = Math.floor(currentIndex / DOTS_PER_PAGE);
      updateCarousel();
      renderDots();
    }

    function prevCard() {
      if (!filteredCards.length) return;
      currentIndex = (currentIndex - 1 + filteredCards.length) % filteredCards.length;
      currentPage = Math.floor(currentIndex / DOTS_PER_PAGE);
      updateCarousel();
      renderDots();
    }

    /* =====================
       EVENT LISTENERS
    ====================== */

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        filterCards(btn.dataset.filter);
      });
    });

    if (nextBtn) nextBtn.onclick = nextCard;
    if (prevBtn) prevBtn.onclick = prevCard;

    if (dotsPrev) {
      dotsPrev.onclick = () => {
        if (currentPage > 0) {
          currentPage--;
          currentIndex = currentPage * DOTS_PER_PAGE;
          updateCarousel();
          renderDots();
        }
      };
    }

    if (dotsNext) {
      dotsNext.onclick = () => {
        const totalPages = Math.ceil(filteredCards.length / DOTS_PER_PAGE);
        if (currentPage < totalPages - 1) {
          currentPage++;
          currentIndex = currentPage * DOTS_PER_PAGE;
          updateCarousel();
          renderDots();
        }
      };
    }

    document.addEventListener('keydown', e => {
      if (e.key === 'ArrowLeft') prevCard();
      if (e.key === 'ArrowRight') nextCard();
    });

    if (carouselWrapper) {
      let startX = 0;

      carouselWrapper.addEventListener('touchstart', e => {
        startX = e.changedTouches[0].screenX;
      });

      carouselWrapper.addEventListener('touchend', e => {
        const diff = startX - e.changedTouches[0].screenX;
        if (Math.abs(diff) > 50) diff > 0 ? nextCard() : prevCard();
      });
    }

    updateCarousel();
    renderDots();
  }

  /* ðŸ”¥ INI KUNCI UTAMANYA */
  document.addEventListener('astro:page-load', initDoctorSchedule);
</script>
