---
// VisionMissionSection.astro
import { visionMissionData } from "../../data/visionMission";

const { vision, mission } = visionMissionData;
---

<section class="py-12 px-4 relative overflow-hidden">
  <div class="max-w-6xl mx-auto relative z-10">
    <div class="grid md:grid-cols-2 gap-5">
      <!-- VISI CARD -->
      <div class="group relative">
        <div
          class="absolute -inset-0.5 bg-gradient-to-r from-orange-500 to-orange-400 rounded-xl opacity-0 group-hover:opacity-30 blur transition duration-300">
        </div>

        <div
          class="relative bg-white/80 backdrop-blur-sm rounded-xl p-5 shadow-lg hover:shadow-xl transition-all duration-300 border border-orange-100/50">
          <!-- Icon & Title in one line -->
          <div class="flex items-center gap-3 mb-3">
            <div class="relative">
              <div
                class="absolute inset-0 bg-orange-500/20 rounded-lg blur group-hover:blur-md transition-all">
              </div>
              <div
                class="relative w-10 h-10 rounded-lg bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center shadow-md group-hover:scale-105 transition-transform">
                <svg
                  class="w-5 h-5 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  ></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-orange-600">
                {vision.title}
              </h3>
              <div
                class="w-12 h-0.5 bg-gradient-to-r from-orange-500 to-orange-300 rounded-full mt-1">
              </div>
            </div>
          </div>

          <p class="text-gray-700 text-sm leading-relaxed">
            {vision.description}
          </p>
        </div>
      </div>

      <!-- MISI CARD -->
      <div class="group relative">
        <div
          class="absolute -inset-0.5 bg-gradient-to-r from-green-500 to-green-400 rounded-xl opacity-0 group-hover:opacity-30 blur transition duration-300">
        </div>

        <div
          class="relative bg-white/80 backdrop-blur-sm rounded-xl p-5 shadow-lg hover:shadow-xl transition-all duration-300 border border-green-100/50">
          <!-- Icon & Title in one line -->
          <div class="flex items-center gap-3 mb-3">
            <div class="relative">
              <div
                class="absolute inset-0 bg-green-500/20 rounded-lg blur group-hover:blur-md transition-all">
              </div>
              <div
                class="relative w-10 h-10 rounded-lg bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center shadow-md group-hover:scale-105 transition-transform">
                <svg
                  class="w-5 h-5 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-green-600">
                {mission.title}
              </h3>
              <div
                class="w-12 h-0.5 bg-gradient-to-r from-green-500 to-green-300 rounded-full mt-1">
              </div>
            </div>
          </div>

          <ul class="space-y-2">
            {
              mission.items.map((item) => (
                <li class="flex items-start gap-2.5 text-sm group/item">
                  <div class="relative flex-shrink-0 mt-0.5">
                    <div class="absolute inset-0 bg-green-500/20 rounded blur-sm group-hover/item:blur transition-all" />
                    <div class="relative w-4 h-4 rounded bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center group-hover/item:scale-125 transition-transform duration-300">
                      <svg
                        class="w-2.5 h-2.5 text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="3"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                    </div>
                  </div>
                  <span class="text-gray-700 leading-relaxed group-hover/item:text-gray-900 transition-colors">
                    {item}
                  </span>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
