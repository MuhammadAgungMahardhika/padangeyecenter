---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="my-10 flex flex-col items-center justify-center gap-6 dev-container bg-pec-5-5">
  <!-- SVG Character Working -->
  <div class="working-illustration">
    <svg
      viewBox="0 0 200 150"
      class="w-48 h-36 sm:w-56 sm:h-42 md:w-64 md:h-48">
      <!-- Desk -->
      <rect x="40" y="100" width="120" height="8" fill="#e5e7eb" rx="2"></rect>

      <!-- Laptop Base -->
      <rect x="70" y="85" width="60" height="4" fill="#9ca3af" rx="1"></rect>

      <!-- Laptop Screen -->
      <rect x="75" y="50" width="50" height="35" fill="#1f2937" rx="2"></rect>
      <rect x="78" y="53" width="44" height="29" fill="#60a5fa" rx="1"></rect>

      <!-- Code Lines on Screen -->
      <line
        x1="82"
        y1="58"
        x2="95"
        y2="58"
        stroke="#fff"
        stroke-width="1"
        opacity="0.8"></line>
      <line
        x1="82"
        y1="63"
        x2="105"
        y2="63"
        stroke="#fbbf24"
        stroke-width="1"
        opacity="0.8"></line>
      <line
        x1="82"
        y1="68"
        x2="92"
        y2="68"
        stroke="#10b981"
        stroke-width="1"
        opacity="0.8"></line>
      <line
        x1="82"
        y1="73"
        x2="108"
        y2="73"
        stroke="#fff"
        stroke-width="1"
        opacity="0.8"></line>
      <line
        x1="82"
        y1="78"
        x2="98"
        y2="78"
        stroke="#f97316"
        stroke-width="1"
        opacity="0.8"></line>

      <!-- Person Body -->
      <ellipse cx="100" cy="110" rx="15" ry="8" fill="#3b82f6" opacity="0.3"
      ></ellipse>
      <rect x="92" y="88" width="16" height="22" fill="#3b82f6" rx="3"></rect>

      <!-- Person Head -->
      <circle cx="100" cy="75" r="10" fill="#fbbf24"></circle>

      <!-- Person Hair -->
      <path
        d="M 95 70 Q 90 65 95 65 Q 100 60 105 65 Q 110 65 105 70"
        fill="#1f2937"></path>

      <!-- Person Arms -->
      <rect x="85" y="92" width="6" height="12" fill="#fbbf24" rx="2"></rect>
      <rect x="109" y="92" width="6" height="12" fill="#fbbf24" rx="2"></rect>

      <!-- Person Hands on Keyboard -->
      <circle cx="88" cy="95" r="3" fill="#fbbf24"></circle>
      <circle cx="112" cy="95" r="3" fill="#fbbf24"></circle>

      <!-- Coffee Cup -->
      <rect
        x="135"
        y="95"
        width="10"
        height="12"
        fill="#fff"
        stroke="#9ca3af"
        stroke-width="1"
        rx="1"></rect>
      <ellipse cx="140" cy="95" rx="5" ry="2" fill="#6b4423"></ellipse>
      <path
        d="M 145 98 Q 150 98 150 102"
        stroke="#9ca3af"
        stroke-width="1"
        fill="none"></path>

      <!-- Steam from Coffee -->
      <path
        d="M 137 90 Q 137 85 139 88"
        stroke="#9ca3af"
        stroke-width="0.5"
        fill="none"
        opacity="0.6">
        <animate
          attributeName="d"
          values="M 137 90 Q 137 85 139 88;M 137 90 Q 135 85 137 88;M 137 90 Q 137 85 139 88"
          dur="2s"
          repeatCount="indefinite"></animate>
      </path>
      <path
        d="M 143 90 Q 143 85 141 88"
        stroke="#9ca3af"
        stroke-width="0.5"
        fill="none"
        opacity="0.6">
        <animate
          attributeName="d"
          values="M 143 90 Q 143 85 141 88;M 143 90 Q 145 85 143 88;M 143 90 Q 143 85 141 88"
          dur="2s"
          repeatCount="indefinite"></animate>
      </path>

      <!-- Floating Code Symbols -->
      <text
        x="50"
        y="40"
        font-size="12"
        fill="#f97316"
        opacity="0.4"
        font-family="monospace"
        >{"</>"}
        <animate
          attributeName="y"
          values="40;35;40"
          dur="3s"
          repeatCount="indefinite"></animate>
      </text>
      <text
        x="145"
        y="45"
        font-size="10"
        fill="#10b981"
        opacity="0.4"
        font-family="monospace"
        >{}
        <animate
          attributeName="y"
          values="45;40;45"
          dur="2.5s"
          repeatCount="indefinite"></animate>
      </text>
      <text
        x="30"
        y="70"
        font-size="8"
        fill="#3b82f6"
        opacity="0.4"
        font-family="monospace"
        >()
        <animate
          attributeName="y"
          values="70;65;70"
          dur="3.5s"
          repeatCount="indefinite"></animate>
      </text>
    </svg>
  </div>

  <!-- Text Content -->
  <span
    class="text-rotate
      text-primary
      text-lg
      sm:text-xl
      md:text-2xl
      lg:text-3xl
      xl:text-4xl
      modern-font">
    <span class="justify-items-center flex flex-col gap-1">
      <span>{lang === "id" ? "PROSES PENGEMBANGAN" : "In Develop"} </span>
      <span>{lang === "id" ? "TUNGGU PERKEMBANGAN !" : "STAY TUNE !"}</span>
    </span>
  </span>
</div>

<style>
  .modern-font {
    font-family:
      "Playfair Display", "Georgia", "Cambria", "Times New Roman", serif;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .dev-container {
    padding: 3rem 2rem;
    border-radius: 1.5rem;
    /* background: var(--background-body); */
    box-shadow:
      inset 0 2px 8px rgba(0, 0, 0, 0.1),
      inset 0 4px 16px rgba(0, 0, 0, 0.05);
  }

  @media (prefers-color-scheme: dark) {
    .dev-container {
      box-shadow:
        inset 0 2px 8px rgba(0, 0, 0, 0.3),
        inset 0 4px 16px rgba(0, 0, 0, 0.2);
    }
  }

  .working-illustration {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>
