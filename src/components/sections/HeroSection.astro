---
import VisiMissionSection from "./VisiMissionSection.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import LocationBade from "../buttons/LocationBade.astro";
import { getRouteUrl } from "../../i18n/path";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="relative min-h-screen flex overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <!-- Floating Shapes -->
    <div
      class="absolute top-20 left-10 w-72 h-72 bg-orange-400/10 rounded-full blur-3xl animate-float">
    </div>
    <div
      class="absolute bottom-20 right-10 w-96 h-96 bg-green-400/10 rounded-full blur-3xl animate-float-delayed">
    </div>
    <div
      class="absolute top-1/2 left-1/2 w-64 h-64 bg-orange-300/5 rounded-full blur-2xl animate-pulse">
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 py-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- LEFT CONTENT -->
      <div class="space-y-8 animate-fade-in-up">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-orange-500/10 to-green-500/10 rounded-full border border-orange-200/50 backdrop-blur-sm">
          <span class="relative flex h-3 w-3">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"
            ></span>
            <span
              class="relative inline-flex rounded-full h-3 w-3 bg-orange-500"
            ></span>
          </span>
          <span
            class="text-sm font-medium bg-gradient-to-r from-orange-600 to-green-600 bg-clip-text text-transparent">
            <a href={getRouteUrl(lang, "about")}>{t("hero.badge")}</a>
          </span>
        </div>

        <div class="space-y-4">
          <h1 class="text-6xl lg:text-7xl font-bold leading-tight">
            <span
              class="bg-gradient-to-r from-green-600 to-green-700 bg-clip-text text-transparent">
              Padang
            </span>
            <span
              class="bg-gradient-to-r from-orange-500 to-orange-600 bg-clip-text text-transparent">
              Eye Center
            </span>
          </h1>

          <div class="space-y-3 max-w-xl">
            <p class="text-xl text-[color:var(--text-muted)] leading-relaxed">
              {t("hero.subtitle")}
            </p>
            <LocationBade />
          </div>
        </div>

        <div class="flex flex-wrap gap-4">
          <!-- Button Primary -->
          <a href={getRouteUrl(lang, "services")} class="btn-primary-pec">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
            {t("hero.cta.services")}
          </a>

          <!-- Button Outline -->
          <a href="" class="btn-outline-pec">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            {t("hero.cta.appointment")}
          </a>
        </div>
      </div>

      <!-- RIGHT IMAGE with 3D Effect -->
      <div class="relative animate-fade-in">
        <div class="relative">
          <!-- 3D Card Effect -->
          <div
            class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-green-500/20 rounded-3xl blur-2xl transform rotate-6">
          </div>

          <div
            class="relative bg-white p-2 rounded-3xl shadow-2xl transform hover:scale-105 hover:rotate-2 transition-all duration-500">
            <div class="relative">
              <img
                src="/assets/images/pec-khatib.jpeg"
                alt="Padang Eye Center"
                class="rounded-2xl w-full h-auto"
                width="600"
                height="500"
              />

              <!-- Play Button -->
              <button
                id="playButton"
                class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-14 h-14 md:w-20 md:h-20 bg-white/90 hover:bg-white rounded-full flex items-center justify-center shadow-2xl transition-all duration-300 hover:scale-110 group backdrop-blur-sm">
                <svg
                  class="w-7 h-7 md:w-10 md:h-10 text-orange-500 ml-0.5 md:ml-1 group-hover:scale-110 transition-transform"
                  fill="currentColor"
                  viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z"></path>
                </svg>
              </button>
            </div>

            <!-- Floating Badge -->
            <div
              class="absolute -bottom-6 -left-6 bg-white p-6 rounded-2xl shadow-xl animate-float">
              <div class="flex items-center gap-4">
                <div
                  class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center">
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-2xl font-bold text-gray-800">10K+</div>
                  <div class="text-sm text-gray-600">
                    {t("hero.stats.patients")}
                  </div>
                </div>
              </div>
            </div>

            <!-- Floating Badge 2 -->
            <div
              class="absolute -top-6 -right-6 bg-gradient-to-br from-green-500 to-green-600 p-6 rounded-2xl shadow-xl animate-float-delayed">
              <div class="text-center">
                <div class="text-3xl font-bold text-white">98%</div>
                <div class="text-sm text-white/90">
                  {t("hero.stats.success")}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Video Modal -->
      <div
        id="videoModal"
        class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 hidden items-center justify-center p-4">
        <div class="relative w-full max-w-4xl">
          <!-- Close Button -->
          <button
            id="closeModal"
            class="absolute -top-12 right-0 w-10 h-10 bg-white/10 hover:bg-white/20 rounded-full flex items-center justify-center transition-colors">
            <svg
              class="w-6 h-6 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>

          <!-- Video Container -->
          <div class="bg-black rounded-2xl overflow-hidden shadow-2xl">
            <div class="relative" style="padding-bottom: 56.25%;">
              <iframe
                id="videoFrame"
                class="absolute top-0 left-0 w-full h-full"
                src=""
                title="Padang Eye Center Profile Video"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
              </iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
    <VisiMissionSection />
  </div>
</div>
<script>
  function initVideoModal() {
    const playButton = document.getElementById("playButton");
    const videoModal = document.getElementById("videoModal");
    const closeModal = document.getElementById("closeModal");
    const videoFrame = document.getElementById(
      "videoFrame",
    ) as HTMLIFrameElement;

    if (!playButton || !videoModal || !closeModal || !videoFrame) return;

    // Ganti dengan URL video YouTube Anda
    const videoUrl =
      "https://www.youtube.com/embed/mczrT2NWGaE?autoplay=1&rel=0&modestbranding=1";

    // Open modal
    playButton.addEventListener("click", () => {
      videoModal.classList.remove("hidden");
      videoModal.classList.add("flex");
      videoFrame.src = videoUrl;
    });

    // Close modal
    const closeVideoModal = () => {
      videoModal.classList.add("hidden");
      videoModal.classList.remove("flex");
      videoFrame.src = "";
    };

    closeModal.addEventListener("click", closeVideoModal);

    // Close on backdrop click
    videoModal.addEventListener("click", (e) => {
      if (e.target === videoModal) {
        closeVideoModal();
      }
    });

    // Close on Escape key
    const handleEscape = (e: KeyboardEvent) => {
      if (e.key === "Escape") {
        closeVideoModal();
      }
    };
    document.addEventListener("keydown", handleEscape);
  }

  // Run on initial load
  initVideoModal();

  // Run after view transitions (for Astro's view transitions)
  document.addEventListener("astro:page-load", initVideoModal);

  // Run after navigation (fallback)
  document.addEventListener("DOMContentLoaded", initVideoModal);
</script>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes float-delayed {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 3s ease-in-out infinite;
    animation-delay: 0.5s;
  }
</style>
<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes float-delayed {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-30px);
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 8s ease-in-out infinite;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
</style>
