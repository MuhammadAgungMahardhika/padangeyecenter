---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import {locations} from "../../data/locations";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const title = "Lokasi Kami - Padang Eye Center";
const description = "Temukan lokasi Padang Eye Center terdekat di Rumah Sakit dan Klinik";
const permalink = `${Astro.site?.href}lokasi`;
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="lokasi">
  
  <div class="locations-page-wrapper relative overflow-hidden">
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 relative z-10">
      <!-- Page Header -->
      <div class="text-center">
        <div class="inline-flex items-center gap-2 mb-4">
          <div class="w-12 h-[2px] bg-gradient-to-r from-transparent via-orange-500 to-transparent"></div>
          <span class="text-xs font-bold uppercase tracking-[0.3em] text-orange-500">
            Lokasi
          </span>
          <div class="w-12 h-[2px] bg-gradient-to-r from-transparent via-orange-500 to-transparent"></div>
        </div>
        
        <p class="text-lg page-subtitle max-w-2xl mx-auto">
          Pilih lokasi terdekat untuk layanan kesehatan mata profesional
        </p>
      </div>

      <!-- Rumah Sakit Section -->
      <section class="mb-20">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center shadow-lg shadow-green-500/30">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-black section-title">Rumah Sakit</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-5">
          {locations.hospitals.map((location, index) => (
            <article class="location-card group">
              <div class="card-container">
                <!-- Gradient Border Effect -->
                <div class="card-gradient"></div>
                
                <!-- Card Content -->
                <div class="card-content">
                  <!-- Badge -->
                  <div class="absolute top-4 right-4 z-10">
                    <span class="badge badge-hospital">RS</span>
                  </div>

                  <!-- Image -->
                  <div class="image-wrapper mb-4">
                    <img 
                      src={"/assets/images/locations/" + location.image || '/assets/images/locations/default-hospital.jpg'} 
                      alt={location.name}
                      class="location-image"
                    />
                  </div>

                  <!-- Name -->
                  <h3 class="location-title mb-2">
                    {location.name}
                  </h3>

                  <!-- Address -->
                  <p class="location-address mb-6">
                    {location.address}
                  </p>

                  <!-- Buttons -->
                  <div class="flex gap-2">
                    <a
                      href={location.mapUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="btn btn-maps">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                      </svg>
                      Maps
                    </a>
                    <a
                      href={`#detail-${index}`}
                      class="btn btn-detail">
                      Detail
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </div>

                <!-- Decorative Elements -->
                <div class="card-shimmer"></div>
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- Klinik Section -->
      <section>
        <div class="flex items-center gap-3 mb-8">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center shadow-lg shadow-orange-500/30">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-black section-title">Klinik</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-5">
          {locations.clinics.map((location, index) => (
            <article class="location-card group">
              <div class="card-container">
                <!-- Gradient Border Effect -->
                <div class="card-gradient card-gradient-clinic"></div>
                
                <!-- Card Content -->
                <div class="card-content">
                  <!-- Badge -->
                  <div class="absolute top-4 right-4 z-10">
                    <span class="badge badge-clinic">Klinik</span>
                  </div>

                  <!-- Image -->
                  <div class="image-wrapper mb-4">
                    <img 
                      src={ "/assets/images/locations/" + location.image || '/assets/images/locations/default-hospital.jpg'} 
                      alt={location.name}
                      class="location-image"
                    />
                  </div>

                  <!-- Name -->
                  <h3 class="location-title mb-2">
                    {location.name}
                  </h3>

                  <!-- Address -->
                  <p class="location-address mb-6">
                    {location.address}
                  </p>

                  <!-- Buttons -->
                  <div class="flex gap-2">
                    <a
                      href={location.mapUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="btn btn-maps">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                      </svg>
                      Maps
                    </a>
                    <a
                      href={`#detail-${index}`}
                      class="btn btn-detail">
                      Detail
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </div>

                <!-- Decorative Elements -->
                <div class="card-shimmer"></div>
              </div>
            </article>
          ))}
        </div>
      </section>

    </div>
  </div>
</BaseLayout>

<style>
  /* Background Blobs */
  .decorative-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.15;
    pointer-events: none;
    animation: float 20s ease-in-out infinite;
  }

  .blob-orange {
    top: -10%;
    left: -5%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(234, 88, 12, 0.4), transparent);
    animation-delay: 0s;
  }

  .blob-green {
    bottom: -10%;
    right: -5%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(22, 163, 74, 0.4), transparent);
    animation-delay: 10s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  /* Typography */
  .page-title-text {
    color: var(--text-main);
  }

  .page-subtitle {
    color: var(--text-muted);
  }

  .section-title {
    color: var(--text-main);
  }

  /* Location Cards */
  .location-card {
    height: 100%;
  }

  .card-container {
    position: relative;
    height: 100%;
    border-radius: 1.25rem;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-gradient {
    position: absolute;
    inset: 0;
    padding: 2px;
    background: linear-gradient(135deg, rgba(22, 163, 74, 0.3), rgba(22, 163, 74, 0.1));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    border-radius: 1.25rem;
    opacity: 0.5;
    transition: opacity 0.4s ease;
  }

  .card-gradient-clinic {
    background: linear-gradient(135deg, rgba(234, 88, 12, 0.3), rgba(234, 88, 12, 0.1));
  }

  .location-card:hover .card-gradient {
    opacity: 1;
  }

  /* Removed icon-circle styles - replaced with images */

  .card-content {
    position: relative;
    height: 100%;
    padding: 1.5rem;
    background: var(--background-body);
    border-radius: 1.2rem;
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
  }

  :root.theme-dark .card-content {
    background: rgba(15, 23, 42, 0.6);
  }

  /* Badge */
  .badge {
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.35rem 0.75rem;
    border-radius: 9999px;
    backdrop-filter: blur(8px);
  }

  .badge-hospital {
    background: rgba(22, 163, 74, 0.15);
    color: rgb(22, 163, 74);
    border: 1px solid rgba(22, 163, 74, 0.3);
  }

  .badge-clinic {
    background: rgba(234, 88, 12, 0.15);
    color: rgb(234, 88, 12);
    border: 1px solid rgba(234, 88, 12, 0.3);
  }

  /* Image Styling */
  .image-wrapper {
    width: 100%;
    height: 180px;
    border-radius: 0.875rem;
    overflow: hidden;
    position: relative;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.05), rgba(0, 0, 0, 0.02));
  }

  :root.theme-dark .image-wrapper {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
  }

  .location-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .location-card:hover .location-image {
    transform: scale(1.08);
  }

  /* Location Title */
  .location-title {
    font-size: 1.125rem;
    font-weight: 800;
    color: var(--text-main);
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  /* Address */
  .location-address {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--text-muted);
    flex-grow: 1;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.65rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 0.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    flex: 1;
  }

  .btn-maps {
    background: rgba(0, 0, 0, 0.05);
    color: var(--text-main);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  :root.theme-dark .btn-maps {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .btn-maps:hover {
    background: rgb(59, 130, 246);
    color: white;
    border-color: rgb(59, 130, 246);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px -4px rgba(59, 130, 246, 0.4);
  }

  .btn-detail {
    background: linear-gradient(135deg, var(--text-primary), var(--text-secondary));
    color: white;
    border: none;
  }

  .btn-detail:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px -4px rgba(234, 88, 12, 0.5);
    filter: brightness(1.1);
  }

  /* Card Shimmer Effect */
  .card-shimmer {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.6s ease;
    pointer-events: none;
  }

  .location-card:hover .card-shimmer {
    left: 100%;
  }

  /* Hover Effects */
  .location-card:hover .card-container {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.15);
  }

  :root.theme-dark .location-card:hover .card-container {
    box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.4);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blob-orange, .blob-green {
      width: 300px;
      height: 300px;
    }

    .image-wrapper {
      height: 160px;
    }

    .location-title {
      font-size: 1rem;
    }

    .location-address {
      font-size: 0.8125rem;
    }
  }
</style>