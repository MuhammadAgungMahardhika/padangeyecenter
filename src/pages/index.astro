---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Padang Eye Center - Pusat Kesehatan Mata Terpercaya';
const description = 'Klinik mata terpercaya di Padang dengan layanan lengkap dan dokter spesialis mata berpengalaman.';
const permalink = Astro.site.href;
const promos = [
  {
    id: 1,
    badge: "Diskon 25%",
    badgeColor: "orange",
    title: "Pemeriksaan Lengkap",
    description: "Dapatkan pemeriksaan mata komprehensif dengan harga spesial",
    price: "Rp 150K",
    oldPrice: "Rp 200K",
    features: [
      "Pemeriksaan Refraksi",
      "Pemeriksaan Funduskopi",
      "Konsultasi Gratis"
    ],
    link: "/promo/pemeriksaan",
    buttonText: "Ambil Promo",
    gradient: "from-orange-50 to-white",
    border: "border-orange-100",
    buttonGradient: "from-orange-500 to-orange-600"
  },
  {
    id: 2,
    badge: "Paket Hemat",
    badgeColor: "green",
    title: "Paket Keluarga",
    description: "Pemeriksaan untuk sekeluarga dengan harga lebih ekonomis",
    price: "Rp 500K",
    note: "(4 orang)",
    features: [
      "Untuk 4 Anggota Keluarga",
      "Pemeriksaan Lengkap",
      "Hemat Hingga 30%"
    ],
    link: "/promo/keluarga",
    buttonText: "Ambil Promo",
    gradient: "from-green-50 to-white",
    border: "border-green-100",
    buttonGradient: "from-green-500 to-green-600"
  },
  {
    id: 3,
    badge: "Paket Hemat",
    badgeColor: "green",
    title: "Paket Keluarga",
    description: "Pemeriksaan untuk sekeluarga dengan harga lebih ekonomis",
    price: "Rp 500K",
    note: "(4 orang)",
    features: [
      "Untuk 4 Anggota Keluarga",
      "Pemeriksaan Lengkap",
      "Hemat Hingga 30%"
    ],
    link: "/promo/keluarga",
    buttonText: "Ambil Promo",
    gradient: "from-green-50 to-white",
    border: "border-green-100",
    buttonGradient: "from-orange-500 to-orange-600"
  },
];
const services = [
  {
    title: "Pemeriksaan Mata",
    description:
      "Screening komprehensif untuk deteksi dini gangguan penglihatan dengan teknologi modern",
    link: "/layanan/pemeriksaan",
    color: "orange",
    icon: "eye",
  },
  {
    title: "Operasi Katarak",
    description:
      "Prosedur modern dengan teknologi Phacoemulsification untuk hasil optimal",
    link: "/layanan/katarak",
    color: "green",
    icon: "shield",
  },
  {
    title: "LASIK",
    description:
      "Koreksi penglihatan tanpa kacamata menggunakan teknologi laser terkini",
    link: "/layanan/lasik",
    color: "gradient",
    icon: "spark",
  },
];
---
<BaseLayout title={title} description={description} permalink={permalink}>
  <!-- HERO SECTION with 3D Effect -->
  <div class="relative min-h-screen flex overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-pec-5-5">
      <!-- Floating Shapes -->
      <div class="absolute top-20 left-10 w-72 h-72 bg-orange-400/10 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-green-400/10 rounded-full blur-3xl animate-float-delayed"></div>
      <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-orange-300/5 rounded-full blur-2xl animate-pulse"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 py-20">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- LEFT CONTENT -->
        <div class="space-y-8 animate-fade-in-up">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-orange-500/10 to-green-500/10 rounded-full border border-orange-200/50 backdrop-blur-sm">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-orange-500"></span>
            </span>
            <span class="text-sm font-medium bg-gradient-to-r from-orange-600 to-green-600 bg-clip-text text-transparent">
              Terpercaya Sejak 2010
            </span>
          </div>

          <div class="space-y-4">
            <h1 class="text-6xl lg:text-7xl font-bold leading-tight">
              <span class="bg-gradient-to-r from-green-600 to-green-700 bg-clip-text text-transparent">
                Padang
              </span>
              <br/>
              <span class="bg-gradient-to-r from-orange-500 to-orange-600 bg-clip-text text-transparent">
                Eye Center
              </span>
            </h1>
            
            <p class="text-xl text-gray-600 leading-relaxed max-w-xl">
              Pusat layanan kesehatan mata terlengkap dengan teknologi modern dan tim dokter spesialis berpengalaman di Sumatera Barat.
            </p>
          </div>

          <div class="flex flex-wrap gap-4">
            <a href="/layanan" class="group relative px-8 py-4 bg-gradient-to-r from-orange-500 to-orange-600 text-white rounded-xl font-semibold shadow-lg shadow-orange-500/30 hover:shadow-xl hover:shadow-orange-500/40 transform hover:-translate-y-0.5 transition-all duration-200">
              <span class="flex items-center gap-2">
                Layanan Kami
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </span>
            </a>
            
            <a href="/jadwal" class="group px-8 py-4 bg-white text-green-600 rounded-xl font-semibold border-2 border-green-600 hover:bg-green-50 transform hover:-translate-y-0.5 transition-all duration-200">
              <span class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Buat Janji
              </span>
            </a>
          </div>
        </div>

        <!-- RIGHT IMAGE with 3D Effect -->
        <div class="relative animate-fade-in">
          <div class="relative">
            <!-- 3D Card Effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-green-500/20 rounded-3xl blur-2xl transform rotate-6"></div>
            
            <div class="relative bg-white p-2 rounded-3xl shadow-2xl transform hover:scale-105 hover:rotate-2 transition-all duration-500">
              <img
                src="/assets/images/pec-khatib.jpeg"
                alt="Padang Eye Center"
                class="rounded-2xl w-full h-auto"
                width="600"
                height="500"
              />
              
              <!-- Floating Badge -->
              <div class="absolute -bottom-6 -left-6 bg-white p-6 rounded-2xl shadow-xl animate-float">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-2xl font-bold text-gray-800">10K+</div>
                    <div class="text-sm text-gray-600">Pasien Puas</div>
                  </div>
                </div>
              </div>

              <!-- Floating Badge 2 -->
              <div class="absolute -top-6 -right-6 bg-gradient-to-br from-green-500 to-green-600 p-6 rounded-2xl shadow-xl animate-float-delayed">
                <div class="text-center">
                  <div class="text-3xl font-bold text-white">98%</div>
                  <div class="text-sm text-white/90">Sukses Rate</div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
   <!-- PROMO CARDS SECTION -->
  <div class="py-20 px-4 ">
    <div class="max-w-7xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <div class="inline-block mb-4">
          <span class="px-4 py-2 bg-gradient-to-r from-orange-100 to-green-100 rounded-full text-sm font-semibold text-gray-700">
            Penawaran Spesial
          </span>
        </div>
        <h2 class="text-4xl font-bold mb-3">
          <span class="bg-gradient-to-r from-orange-600 to-green-600 bg-clip-text text-transparent">
            Promo Bulan Ini
          </span>
        </h2>
        <p class="text-gray-600 text-lg">
          Dapatkan penawaran terbaik untuk kesehatan mata Anda
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {promos.map((promo) => (
          <div
            class={`group relative bg-gradient-to-br ${promo.gradient} rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 border ${promo.border}`}
          >
            <!-- Badge -->
            <div class="absolute top-4 right-4 z-10">
              <div class={`bg-gradient-to-r ${promo.badgeColor === 'orange'
                ? 'from-orange-500 to-orange-600'
                : 'from-green-500 to-green-600'
              } text-white px-4 py-2 rounded-full font-bold text-sm shadow-lg`}>
                {promo.badge}
              </div>
            </div>

            <div class="p-8 pb-4">
              <h3 class="text-2xl font-bold text-gray-800 mb-2">
                {promo.title}
              </h3>

              <p class="text-gray-600 mb-4">
                {promo.description}
              </p>

              <!-- Price -->
              <div class="flex items-baseline gap-2 mb-4">
                <span class="text-3xl font-bold text-orange-600">
                  {promo.price}
                </span>
                {promo.oldPrice && (
                  <span class="text-lg text-gray-400 line-through">
                    {promo.oldPrice}
                  </span>
                )}
                {promo.note && (
                  <span class="text-sm text-gray-500">
                    {promo.note}
                  </span>
                )}
              </div>

              <!-- Features -->
              <ul class="space-y-2 mb-6">
                {promo.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-gray-600">
                    <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a
                href={promo.link}
                class={`block w-full text-center px-6 py-3 bg-gradient-to-r ${promo.buttonGradient} text-white rounded-xl font-semibold hover:shadow-lg transform hover:scale-105 transition-all`}
              >
                {promo.buttonText}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
  <!-- SERVICES SECTION -->
<div class="py-24 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in-up">
      <span class="px-4 py-2 bg-gradient-to-r from-orange-100 to-green-100 rounded-full text-sm font-semibold text-gray-700">
        Layanan Kami
      </span>
      <h2 class="text-4xl lg:text-5xl font-bold mt-4">
        <span class="bg-gradient-to-r from-green-600 to-orange-600 bg-clip-text text-transparent">
          Layanan Unggulan
        </span>
      </h2>
    </div>

    <!-- Service Cards -->
    <div class="grid md:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 border border-gray-100">

          <!-- Hover gradient -->
          <div
            class={`absolute inset-0 bg-gradient-to-br ${
              service.color === "orange"
                ? "from-orange-500/5"
                : service.color === "green"
                ? "from-green-500/5"
                : "from-orange-500/5"
            } to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity`}
          ></div>

          <div class="relative">
            <!-- Icon -->
            <div
              class={`w-16 h-16 bg-gradient-to-br ${
                service.color === "orange"
                  ? "from-orange-400 to-orange-600"
                  : service.color === "green"
                  ? "from-green-400 to-green-600"
                  : "from-orange-400 via-orange-500 to-green-500"
              } rounded-2xl flex items-center justify-center mb-6 transform group-hover:scale-110 group-hover:rotate-3 transition-all duration-300`}
            >
              {service.icon === "eye" && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
              )}

              {service.icon === "shield" && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              )}

              {service.icon === "spark" && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
              )}
            </div>

            <h3 class="text-2xl font-bold text-gray-800 mb-3">
              {service.title}
            </h3>

            <p class="text-gray-600 leading-relaxed mb-4">
              {service.description}
            </p>

            <a
              href={service.link}
              class={`inline-flex items-center font-semibold transition-all group-hover:gap-2 ${
                service.color === "green"
                  ? "text-green-600"
                  : "text-orange-600"
              }`}
            >
              Pelajari lebih lanjut
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

  <!-- CTA SECTION -->
  <div class="relative py-24 px-4 overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-orange-500/5 via-white to-green-500/5">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto text-center ">
      <h2 class="text-4xl text-secondary lg:text-5xl font-bold mb-6">
        Siap Merawat Kesehatan Mata Anda?
      </h2>
      <p class="text-xl mb-10 text-secondary">
        Hubungi kami untuk konsultasi dan jadwalkan pemeriksaan mata Anda hari ini
      </p>

      <div class="flex flex-wrap gap-4 justify-center">
        <a href="tel:+62751123456" class="group px-8 py-4 bg-white text-secondary rounded-xl font-semibold shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-200">
          <span class="flex items-center gap-3">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            (0751) 123-456
          </span>
        </a>

        <a href="https://wa.me/628123456789" target="_blank" rel="noopener" class="group px-8 py-4 bg-green-600  rounded-xl font-semibold shadow-xl hover:shadow-2xl hover:bg-green-700 transform hover:-translate-y-1 transition-all duration-200">
          <span class="flex items-center gap-3">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
            </svg>
            WhatsApp Kami
          </span>
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  
  @keyframes float-delayed {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-30px); }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 8s ease-in-out infinite;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
</style>